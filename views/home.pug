extends base

append head
    script(src="https://code.jquery.com/jquery-3.6.0.min.js")
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/flickity/3.0.0/flickity.min.css')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/flickity/3.0.0/flickity.pkgd.min.js')
    script(type='module' src='/js/front/tagsCarousel.js')
block content

  section#main.main
    .carouselContainer
      .carouselOfTags
        if tags.length
          each tag in tags
            a.carouselTag(href='#')
              span.hashtag=`#${tag.name}`
    .container
      if images.length
        ul.image-gallery
          each image in images
            li
              a(href=`/${image.user.username}/${image.slug}`)
                img(src=`img/stock/${image.media}`)
      else
        h1 Nothing to see here