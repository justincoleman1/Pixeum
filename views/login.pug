doctype html
html(lang="en")
    head
        block head
            meta(charset='UTF-8')
            meta(http-equiv='X-UA-Compatible', content='IE=edge')
            meta(name='viewport', content='width=device-width, initial-scale=1.0')

            link(rel='stylesheet' href='/css/style.css')
            link(rel='shortcut icon' type='image/png' href='img/favicon.png')
            <link rel="preconnect" href="https://fonts.googleapis.com">
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
            <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,400;0,500;0,700;1,400;1,500;1,700&display=swap" rel="stylesheet">

            title Pixeum || #{title}

    body.login
        .login-form
            h2.heading-secondary.ma-bt-lg Pixeum
            form.form
                .form__group
                    input#email.form__input(type='email', placeholder='you@example.com', required)
                .form__group.ma-bt-md
                    input#password.form__input(type='password', placeholder='••••••••', required, minlength='8')
                .form__group
                    button.btn--login.btn--blue Login
                .form__group
                    a.btn--login Forgot Password?


        // FOOTER
        include _footer

        script(type='module' src='/js/bundled/index.js')